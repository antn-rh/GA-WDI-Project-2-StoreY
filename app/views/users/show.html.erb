<h1> <%= @user.name %>'s Profile </h1>

<ul>
  <% @user.stories.each do |story| %>
    <li>
      <%= link_to story.title, user_story_path(@user, story) %>
        <% story.pins.each do |pin| %>
          <%= image_tag pin.image.url(:med) if pin.image? %>
        <% end %>
      <% end %>
    </li>
</ul>
<br>
<br>
<%= link_to 'Create a New Story', new_user_story_path(@user, @story) if current_user == @user %>
<br>
<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path %>
  <br>
  <%= link_to 'Delete', user_path, method: :delete, data: {confirm: 'Are you sure?'}%>
<% end %>
<br>
<%= link_to 'Back to main', users_path %>
