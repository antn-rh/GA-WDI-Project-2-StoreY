<div class="col-md-6 col-md-offset-3">
  <h1><%= @story.title %></h1>
  <br>
  <h3> <%= @story.description %> </h3>
  <br>
  <h3> <%= @story.location %> </h3>

  <% @pins.each do |pin| %>
  <div class="col-md-4">
    <%= link_to (image_tag pin.image.url(:large)), user_story_pin_path(@user, @story, pin) if pin.image? %>
  </div>
  <% end %>
</div>

<%= link_to 'Add New Pin', new_user_story_pin_path(@user, @story, @pin) %>
<br>
<%= link_to 'Back to Story', user_story_path(@user, @story) %>
