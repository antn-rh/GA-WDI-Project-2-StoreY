<%= @story.title %>
<br>
<%= @story.description.capitalize %>
<br>
<%= @story.location.capitalize %>
<br>
<% @story.pins.each do |pin| %>
  <%= image_tag pin.image.url(:med) if pin.image? %>
  <%= pin.text %>
<% end %>
<br>
<%= link_to 'Edit', edit_user_story_path(@user, @story) if current_user %>
<br>
<%= link_to 'Delete', user_story_path(@user, @story), method: :delete, data: {confirm: 'Are you sure?'} if current_user%>
<br>
<%= link_to 'To Stories', user_stories_path(@user) %>
<br>
<%= link_to 'See Pins', user_story_pins_path(@user, @story) %>
