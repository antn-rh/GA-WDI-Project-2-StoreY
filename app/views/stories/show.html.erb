<h1> <%= @story.title %> - Story show template with pins </h1>

<br>
<%= @story.description.capitalize %>
<br>
<%= @story.location.capitalize %>
<br>

<ul>
  <% @story.pins.each do |pin| %>
    <li>
      <%= image_tag pin.image.url(:med) if pin.image? %>
      <%= pin.text %>
      <%= link_to 'See More', user_story_pin_path(@user, @story, pin) %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'Edit Story', edit_user_story_path(@user, @story) if current_user == @story.user %>
<br>
<%= link_to 'Delete Story', user_story_path(@user, @story), method: :delete, data: {confirm: 'Are you sure?'} if current_user == @story.user %>
<br>
<%= link_to 'To Stories', user_path(@user) %>
<br>
<%= link_to 'Add New Pin', new_user_story_pin_path(@user, @story, @pin) if current_user == @story.user %>
